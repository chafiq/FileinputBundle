{% block fileinput_widget %}
    {% spaceless %}
        {{ form_widget(form.path, {"attr" : attr|merge({
            "class" : "fileinput form-control",
            "data-files" : files|json_encode(),
            'data-locale': app.request.locale,
            "data-delete" : form.delete.vars.id,
            "data-legend" : form.name.vars.full_name|default(null),
            "data-position" : form.position.vars.full_name
        })} ) }}
        {{ form_rest(form) }}
    {% endspaceless %}
{% endblock %}
